{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "outDir": "lib",
    "rootDir": "src",
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/"]
}
